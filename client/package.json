{
  "name": "json-schema-2020-validation-client",
  "displayName": "JSON Schema (2020) Validation",
  "description": "Validates JSON schemas (draft 2020-12) and JSON documents against schemas using the ajv library.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.61.0"
  },
  "activationEvents": [
    "onCommand:json-schema-2020-validation.helloWorld"
  ],
  "build": {
    "extraFiles": [
      {
        "from": "JsonSchemaLanguageServer/bin/Release/net5.0/publish",
        "to": "server/bin",
        "filter": [
          "**/JsonSchemaLanguageServer",
          "**/*.dylib",
          "**/*.dll",
          "**/*.exe"
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.52.0",
		"@vscode/test-electron": "^1.6.1"
  },
  "dependencies": {
		"vscode-languageclient": "^7.0.0"
  }
}
